{
  "name": "incognito-wachira-fullstack",
  "version": "1.0.0",
  "description": "ðŸ•¶ï¸ Incognito Wachira - Anonymous real-time chat application with Socket.IO",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:install && npm run client:build",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:install": "cd server && npm install",
    "install:all": "npm install && npm run client:install && npm run server:install",
    "heroku-postbuild": "npm run client:install && npm run client:build",
    "postinstall": "npm run server:install && npm run client:install"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": ["socket.io", "chat", "real-time", "express", "react", "fullstack"],
  "author": "",
  "license": "MIT"
}
